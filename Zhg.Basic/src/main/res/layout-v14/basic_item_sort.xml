<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/basic_activity_vertical_margin"
    android:paddingBottom="@dimen/basic_activity_vertical_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/basic_activity_horizontal_margin"
    android:paddingRight="@dimen/basic_activity_horizontal_margin">

    <Switch
        android:id="@+id/reverse_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basic_action_sort_reverse" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/move_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/basic_ic_move_black" />


</LinearLayout>